{
  "compilerOptions": {
    "outDir": "./app/assets",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@views*": ["src/views/*"],
      "@components": ["src/components/*"],
      "@redux*": ["src/redux/*"],
      "@assets*": ["src/assets/*"],
      "@src*": ["src/*"],
      "@utils*": ["src/utils/*"]
    }
  },
  "include": ["./src/**/*"]
}
